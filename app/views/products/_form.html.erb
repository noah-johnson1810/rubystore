<%= form_with model: product do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :quantity %><br>
    <%= form.text_area :quantity %>
  </div>

  <div>
    <%= form.label :order_id %><br>
    <%= form.text_area :order_id %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>